#!/bin/bash
# Script Cek Semua User VLESS

config_file="/etc/xray/config.json"

echo -e "====================="
echo -e "ðŸ‘¤ LIST USER VLESS"
echo -e "====================="

grep -E '^#### ' "$config_file" | while read -r line; do
    user=$(echo "$line" | awk '{print $2}')
    exp=$(echo "$line" | awk '{print $3}')
    echo -e "ðŸ‘¤ User     : $user"
    echo -e "ðŸ“… Expired  : $exp"
    echo -e "====================="
done