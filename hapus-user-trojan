#!/bin/bash
# Hapus user Trojan berdasarkan username

config_file="/etc/xray/config.json"
service_name="xray"

echo -e "====================="
echo -e "âŒ HAPUS USER TROJAN"
echo -e "====================="
read -p "ğŸ‘¥ Masukkan username " user

if ! grep -q "^### $user " "$config_file"; then
    echo "âŒ User $user tidak ditemukan!"
    exit 1
fi

sed -i "/^### $user /,/^},{/d" "$config_file"

systemctl restart $service_name
echo -e "âœ… User $user berhasil dihapus!"